<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>'
        <item name="windowNoTitle">true</item>
    </style>
<!--复诊数据-->
    <style name="secondnavigationText">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="fuzhengdata_Row">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">107dp</item>
        <item name="android:shrinkColumns">1,2</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">20dp</item>

    </style>
    <style name="fuzhengdata_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="fuzhengdata_editview">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/edit_bg</item>
        <item name="android:textColor">#ff0000</item>
        <item name="android:textSize">16dp</item>
    </style>
<!--复诊数据-->
 <!--个人设置-->
